{
    // #--------- window
    "window.nativeTabs": true,
    "window.title": "${activeEditorLong}${separator}${dirty} ${rootName}",
    // #-------- editor
    // "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "none",
    "editor.renderIndentGuides": false,
    // number | "hide"
    "editor.scrollbar.verticalScrollbarSize": 1,
    "editor.glyphMargin": false,
    "editor.folding": false,
    // disable highlight words that is the same as
    // the selection
    "editor.selectionHighlight": false,
    "editor.lineNumbers": "on",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "editor.fontFamily": "source code pro",
    "editor.scrollBeyondLastLine": false,
    // don't enable smoothScrolling which would break C-d and C-u
    "editor.smoothScrolling": true,
    "editor.find.globalFindClipboard": true,
    // #-------- git
    "git.decorations.enabled": true,
    // welcomePage | newUntitledFile
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    // #--------- workbench
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.showTabs": true,
    // hide the siderbar
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "scrollbarSlider.background": "#00e",
        "editorGroup.border": "#000",
        "sideBar.border": "#000",
        "tab.inactiveBackground": "#222",
        "tab.activeBackground": "#222",
        "tab.activeBorder": "#efefef",
        "editor.inactiveSelectionBackground": "#303030",
        "editorCursor.background": "#cdcdcd",
        "editorCursor.foreground": "#cdcdcd",
        "titleBar.activeBackground": "#ccc",
        "titleBar.border": "#fff",
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    // #-------- file
    "files.exclude": {},
    "files.associations": {
        "*.vm": "html",
        "*.tpl": "html",
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // #-------- explorer
    "explorer.confirmDragAndDrop": false,
    // #-------- search
    "search.globalFindClipboard": true,
    "search.smartCase": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true,
        "**/build": true,
        "**/public_gen": true,
    },
    // #-------- zenMode
    "zenMode.fullScreen": true,
    // #-------- terminal:external & integrated
    "terminal.external.osxExec": "Iterm.app",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    // #--------- plugin:vim
    // "vim.insertModeKeyBindings"
    // "vim.normalModeKeyBindings"
    // "vim.visualModeKeyBindings"
    // https://marketplace.visualstudio.com/items?itemName=vscodevim.vim
    "vim.disableExtension": false,
    // disable vim.statusBarColorControl to make vim plugin faster
    "vim.experimentalOptimizations": true,
    "vim.statusBarColorControl": false,
    "vim.easymotion": false,
    "vim.useSystemClipboard": true,
    "vim.leader": "<space>",
    "vim.showmodename": true,
    "vim.visualstar": true,
    // Does dragging with the mouse put you into visual mode
    "vim.mouseSelectionGoesIntoVisualMode": false,
    "vim.easymotionMarkerBackgroundColor": "#f00",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-K>": false,
    },
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            // "l" for move one position right
            "after": [
                "<Esc>",
                "l"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "="
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.formatDocument",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [
                "bookmarks.toggle"
            ],
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                "bookmarks.list"
            ],
        },
        {
            "before": [
                "<leader>",
                "<leader>"
            ],
            "commands": [
                "workbench.action.showCommands",
            ],
        },
        {
            "before": [
                "Z",
                "Z"
            ],
            "commands": [
                ":wq",
            ],
        },
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl",
            ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Bind p in visual mode to paste without overriding the current register
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y",
            ],
        },
    ],
    // #-------- plugin:bookmarks
    "bookmarks.treeview.visible": true,
    // #------- language settings
    "[dart]": {},
    "[javascript]": {},
    // #---------- lint:tslint
    // remove experimental decorators warning
    "javascript.implicitProjectConfig.experimentalDecorators": true,
    // #-------- plugin:advancedNewFile
    "advancedNewFile.exclude": {
        "node_modules": true,
        "node_modules_electron": true,
        "dev": true,
        "dist": true
    },
    "gitProjectManager.baseProjectsFolders": [
        "/Users/xiqi/just-workspace",
        "/Users/xiqi/projects",
    ],
    "advancedNewFile.showInformationMessages": true,
    "advancedNewFile.convenienceOptions": [
        "current",
        "last",
        "root"
    ],
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "window.zoomLevel": 1,
    "editor.renderWhitespace": "none",
    "workbench.colorTheme": "Monokai",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.fontWeight": "400",
    "breadcrumbs.enabled": true,
    "vim.cursorStylePerMode.insert": "block",
    "dart.checkForSdkUpdates": false,
    "terminal.integrated.fontFamily": "source code pro",
    "editor.fontLigatures": true,
    "editor.formatOnType": true,
    "editor.fontSize": 14,
    "vim.cursorStylePerMode.normal": "block",
    "editor.cursorStyle": "block",
    "vim.cursorStylePerMode.visual": "block",
    "files.trimFinalNewlines": true,
    "javascript.format.semicolons": "insert",
    "typescript.format.semicolons": "insert",
    "editor.tabSize": 2,
    "workbench.tree.indent": 16,
    "todo-tree.tree.showScanModeButton": false,
    "editor.formatOnSave": true,
    "explorer.confirmDelete": false,
    "vim.autoindent": false
}
